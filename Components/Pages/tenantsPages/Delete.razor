@page "/tenants/delete"
@using Microsoft.EntityFrameworkCore
@using RentalSystem.Models
@inject IDbContextFactory<RentalSystem.Data.RentalSystemContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>tenants</h2>
    <hr />
    @if (tenants is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@tenants.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@tenants.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@tenants.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PhoneNumber</dt>
            <dd class="col-sm-10">@tenants.PhoneNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@tenants.Address</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmergencyContactName</dt>
            <dd class="col-sm-10">@tenants.EmergencyContactName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmergencyContactPhone</dt>
            <dd class="col-sm-10">@tenants.EmergencyContactPhone</dd>
        </dl>
        <EditForm method="post" Model="tenants" OnValidSubmit="Deletetenants" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(tenants is null)">Delete</button> |
            <a href="/tenants">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private tenants? tenants;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        tenants = await context.tenants.FirstOrDefaultAsync(m => m.Id == Id);

        if (tenants is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task Deletetenants()
    {
        using var context = DbFactory.CreateDbContext();
        context.tenants.Remove(tenants!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tenants");
    }
}
